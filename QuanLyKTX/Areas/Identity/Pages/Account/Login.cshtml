@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập - KTX DNTU";
    Layout = "";
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Đăng Nhập - DNTU</title>
    <link rel="stylesheet" href="~/css/main.css">
</head>

<body>
    <div class="container">
        <div class="logo">
            <img src="~/img/dntulogo.png" alt="DNTU Logo">
            <h1>TRƯỜNG ĐẠI HỌC CÔNG NGHỆ ĐỒNG NAI</h1>
            <h2>DONG NAI TECHNOLOGY UNIVERSITY</h2>
            <h3><b>DIGITAL SCHOOL</b></h3>
            <p><b>Ký túc xá Sinh viên</b></p>
        </div>
        <div class="login-form">
            <h3>ĐĂNG NHẬP</h3>
            <hr/>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="off" aria-required="true" placeholder="Tên đăng nhập" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <input class="form-check-input" asp-for="Input.RememberMe" style="width=16px; height=16px"/>
                    <label asp-for="Input.RememberMe" class="form-label">Ghi nhớ</label>
                </div>
                <div class="forgot-password">
                    <a href="#">Bạn quên mật khẩu?</a>
                    <a href="#">Hướng dẫn quên mật khẩu? <span>Xem hướng dẫn</span></a>
                </div>
                <div>
                    <button id="login-submit" type="submit">Đăng nhập</button>
                </div>
            </form>
    </div>
</div>
    <script src="~/js/main.js"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
